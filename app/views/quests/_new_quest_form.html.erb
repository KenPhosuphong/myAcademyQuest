<%= form_with(model: quest, local: false, class: "mb-6") do |form| %>
  <% if quest.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
      <strong>Please fix the following errors:</strong>
      <ul class="mt-2">
        <% quest.errors.full_messages.each do |message| %>
          <li class="text-sm">â€¢ <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex">
    <%= form.text_field :title, 
        class: "flex-1 rounded-l-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2", 
        placeholder: "Add a new quest..." %>
    
    <%= form.submit "+", 
        class: "rounded-r-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium cursor-pointer" %>
  </div>
<% end %>