<%= turbo_frame_tag "quest_#{quest.id}" do %>
  <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
    <%= render quest %>
    <div class="w-full sm:w-auto flex flex-row items-center space-x-2">
      <%= form_with model: quest, local: false, class: "inline-flex items-center" do |form| %>
        <%= form.check_box :status, 
            class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded",
            onchange: "this.form.requestSubmit()" %>
      <% end %>

      <%= button_to quest, method: :delete, 
          class: "flex items-center justify-center p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-md transition-colors cursor-pointer", 
          data: { turbo_confirm: "Are you sure?" },
          title: "Delete quest" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      <% end %>
    </div>
  </div>
<% end %>