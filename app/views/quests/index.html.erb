<% content_for :title, "Quests" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">My Academy Quests</h1>
  </div>

  <!-- New Quest Form -->
  <div id="new_quest_form" class="mb-6">
    <%= render "new_quest_form", quest: @quest %>
  </div>

  <div id="quests" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @quests.any? %>
      <% @quests.each do |quest| %>
        <%= render "quest_row", quest: quest %>
      <% end %>
    <% else %>
      <p class="text-center my-10" id="no_quests_message">No quests found.</p>
    <% end %>
  </div>
</div>